{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "importsNotUsedAsValues": "error",
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "lib": ["es2020"],
  "exclude": ["./node_modules"]
}
